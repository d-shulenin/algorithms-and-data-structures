function binarySearch(arr, value) {
  let start = 0
  let end = arr.length - 1
  while (start <= end) {
    let middle = Math.floor((start + end)/2)
    if (value === arr[middle]) return middle
    else if (value < arr[middle]) {
      end = middle - 1
    }
    else {
      start = middle + 1
    }
  }
  return -1
}

function recursiveBinarySearch(arr, value, start, end) {
   let middle = Math.floor((start + end)/2)
   if (value === arr[middle]) return middle
   else if (value < arr[middle]) return recursiveBinarySearch(arr, value, start, middle-1)
   else return recursiveBinarySearch(arr, value, middle+1, end)
}

//The time complexity of the binary search algorithm is O(log n)
